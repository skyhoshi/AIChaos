@page "/moderation"
@using AIChaos.Brain.Models
@using AIChaos.Brain.Services
@implements IDisposable

@inject ImageModerationService ModerationService
@inject RefundService RefundService
@inject CommandQueueService CommandQueue
@inject AiCodeGeneratorService CodeGenerator
@inject TestClientService TestClientService
@inject AccountService AccountService
@inject IJSRuntime JS

@if (!string.IsNullOrEmpty(alertMessage))
{
    <div class="alert alert-@alertType">@alertMessage</div>
}

<div class="tabs">
    <button class="tab-btn @(activeTab == "images" ? "active" : "")" @onclick='() => activeTab = "images"'>
        üñºÔ∏è Images <span class="pending-count">@pendingImageCount</span>
    </button>
    <button class="tab-btn @(activeTab == "refunds" ? "active" : "")" @onclick='() => activeTab = "refunds"'>
        üí∞ Refunds <span class="pending-count">@pendingRefundCount</span>
    </button>
</div>

@if (activeTab == "images")
{
    <div class="card">
        <h2>üñºÔ∏è Pending Images</h2>
        <div class="btn-group" style="margin-bottom: 20px;">
            <button @onclick="LoadPendingImages" class="btn-secondary">üîÑ Refresh</button>
            <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                <input type="checkbox" @bind="autoRefresh" @bind:after="ToggleAutoRefresh">
                <span style="color: var(--text-dim);">Auto-refresh (5s)</span>
            </label>
        </div>
        <div>
            @if (pendingImages == null || !pendingImages.Any())
            {
                <div class="no-images">‚úÖ No images pending moderation</div>
            }
            else
            {
                @foreach (var img in pendingImages)
                {
                    <div class="image-card">
                        <div class="image-meta">
                            <span><strong>#@img.Id</strong></span>
                            <span>üë§ @img.Author</span>
                        </div>
                        <div class="image-prompt"><strong>Prompt:</strong> @img.UserPrompt</div>
                        <img src="@img.ImageUrl" class="image-preview" alt=@($"Pending image (If you can't see it, embedding might be blocked, please open it in a new tab)")>
                        <div class="action-buttons">
                            <button @onclick="async () => await ApproveImage(img.Id)" class="btn-success">‚úÖ APPROVE</button>
                            <button @onclick="() => DenyImage(img.Id)" class="btn-danger">‚ùå DENY</button>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
}

@if (activeTab == "refunds")
{
    <div class="card">
        <h2>üí∞ Pending Refund Requests</h2>
        <div class="btn-group" style="margin-bottom: 20px;">
            <button @onclick="LoadPendingRefunds" class="btn-secondary">üîÑ Refresh</button>
        </div>
        <div>
            @if (pendingRefunds == null || !pendingRefunds.Any())
            {
                <div class="no-images">‚úÖ No refund requests pending</div>
            }
            else
            {
                @foreach (var refund in pendingRefunds)
                {
                    <div class="image-card">
                        <div class="image-meta">
                            <span><strong>#@refund.Id</strong></span>
                            <span>üë§ @refund.UserDisplayName</span>
                            <span>Command #@refund.CommandId</span>
                        </div>
                        <div class="image-prompt"><strong>Reason:</strong> @refund.Reason</div>
                        <div class="image-prompt" style="color: var(--text-dim); font-size: 12px;">
                            Amount: $@refund.Amount.ToString("F2")
                        </div>
                        <div class="action-buttons">
                            <button @onclick="() => ApproveRefund(refund.Id)" class="btn-success">‚úÖ APPROVE & REFUND</button>
                            <button @onclick="() => DenyRefund(refund.Id)" class="btn-danger">‚ùå DENY</button>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
}

<style>
    .tabs {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
    }

    .tab-btn {
        padding: 10px 20px;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid var(--border);
        color: var(--text);
        cursor: pointer;
        border-radius: 5px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .tab-btn.active {
        background: var(--primary);
        color: #000;
        border-color: var(--primary);
    }

    .pending-count {
        background: var(--error);
        color: white;
        padding: 2px 8px;
        border-radius: 10px;
        font-size: 12px;
        font-weight: bold;
    }

    .no-images {
        text-align: center;
        padding: 40px;
        color: var(--text-dim);
        font-size: 18px;
    }

    .image-card {
        background: rgba(255, 255, 255, 0.05);
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 15px;
    }

    .image-meta {
        display: flex;
        gap: 15px;
        color: var(--text-dim);
        font-size: 12px;
        margin-bottom: 10px;
    }

    .image-prompt {
        margin-bottom: 10px;
        color: var(--text);
    }

    .image-preview {
        max-width: 100%;
        max-height: 400px;
        border-radius: 5px;
        margin-bottom: 10px;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
    }
</style>

@code {
    private string activeTab = "images";
    private string alertMessage = "";
    private string alertType = "info";
    private List<PendingImageEntry>? pendingImages;
    private List<RefundRequest>? pendingRefunds;
    private int pendingImageCount => pendingImages?.Count ?? 0;
    private int pendingRefundCount => pendingRefunds?.Count ?? 0;
    private bool autoRefresh = false;
    private System.Threading.Timer? refreshTimer;

    protected override void OnInitialized()
    {
        LoadPendingImages();
        LoadPendingRefunds();
        
        // Subscribe to events for real-time updates
        ModerationService.PendingImagesChanged += OnPendingImagesChanged;
        CommandQueue.HistoryChanged += OnHistoryChanged;
    }

    private async void OnPendingImagesChanged(object? sender, EventArgs e)
    {
        await InvokeAsync(() =>
        {
            LoadPendingImages();
            StateHasChanged();
        });
    }

    private async void OnHistoryChanged(object? sender, EventArgs e)
    {
        // Reload in case we need to update command statuses
        await InvokeAsync(() =>
        {
            StateHasChanged();
        });
    }

    private void LoadPendingImages()
    {
        try
        {
            pendingImages = ModerationService.GetPendingImages();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Load pending images failed: {ex.Message}");
            ShowAlert("Failed to load pending images", "error");
        }
    }

    private void LoadPendingRefunds()
    {
        try
        {
            pendingRefunds = RefundService.GetPendingRequests();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Load pending refunds failed: {ex.Message}");
            ShowAlert("Failed to load pending refunds", "error");
        }
    }

    private void ToggleAutoRefresh()
    {
        if (autoRefresh)
        {
            refreshTimer = new System.Threading.Timer(_ =>
            {
                InvokeAsync(() =>
                {
                    LoadPendingImages();
                    LoadPendingRefunds();
                });
            }, null, TimeSpan.FromSeconds(5), TimeSpan.FromSeconds(5));
        }
        else
        {
            refreshTimer?.Dispose();
            refreshTimer = null;
        }
    }

    private async Task ApproveImage(int imageId)
    {
        try
        {
            // Null checks for injected services
            if (CodeGenerator == null)
            {
                ShowAlert("Error: Code generator service not available", "error");
                return;
            }
            
            if (CommandQueue == null)
            {
                ShowAlert("Error: Command queue service not available", "error");
                return;
            }
            
            if (TestClientService == null)
            {
                ShowAlert("Error: Test client service not available", "error");
                return;
            }
            
            var entry = ModerationService.ApproveImage(imageId);
            if (entry == null)
            {
                ShowAlert("Failed to approve image - image not found", "error");
                return;
            }
            
            // Generate code with image context
            var (executionCode, undoCode) = await CodeGenerator.GenerateCodeAsync(
                entry.UserPrompt,
                imageContext: $"Image URL: {entry.ImageUrl}");
            
            // Check if we have a linked command to update
            if (entry.CommandId.HasValue)
            {
                // Update the existing placeholder command
                var command = CommandQueue.GetCommand(entry.CommandId.Value);
                if (command != null)
                {
                    command.ExecutionCode = executionCode;
                    command.UndoCode = undoCode;
                    command.ImageContext = entry.ImageUrl;
                    command.Status = CommandStatus.Queued;
                    command.AiResponse = null; // Clear the pending message
                    
                    // Check if test client mode is enabled
                    var isTestClientModeEnabled = TestClientService.IsEnabled;
                    
                    // Queue for execution
                    if (isTestClientModeEnabled)
                    {
                        TestClientService.QueueForTesting(command.Id, executionCode, entry.UserPrompt);
                        Console.WriteLine($"[MODERATION] Approved image command #{command.Id} queued for testing");
                    }
                    else
                    {
                        CommandQueue.QueueInteractiveCode(command.Id, executionCode);
                        Console.WriteLine($"[MODERATION] Approved image command #{command.Id} queued for execution");
                    }
                    
                    ShowAlert($"Image approved! Command #{command.Id} is now queued for execution.", "success");
                    LoadPendingImages();
                    return;
                }
            }
            
            // Fallback: No linked command (old behavior for backward compatibility)
            ShowAlert("Image approved but no linked command found - this shouldn't happen for new submissions", "warning");
            LoadPendingImages();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Approve image failed: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
            ShowAlert($"Error approving image: {ex.Message}", "error");
        }
    }

    private void DenyImage(int imageId)
    {
        try
        {
            var entry = ModerationService.DenyImage(imageId);
            if (entry != null)
            {
                // Refund credits if there's a linked command
                if (entry.CommandId.HasValue && !string.IsNullOrEmpty(entry.UserId))
                {
                    AccountService.AddCredits(entry.UserId, Constants.CommandCost);
                    
                    // Update the command status to Failed
                    var command = CommandQueue.GetCommand(entry.CommandId.Value);
                    if (command != null)
                    {
                        command.Status = CommandStatus.Failed;
                        command.ErrorMessage = "Image denied by moderator";
                        command.AiResponse = "‚ùå Your image was denied by a moderator. Credits have been refunded.";
                    }
                    
                    ShowAlert($"Image denied and ${Constants.CommandCost:F2} refunded", "success");
                }
                else
                {
                    ShowAlert("Image denied", "success");
                }
                
                LoadPendingImages();
            }
            else
            {
                ShowAlert("Failed to deny image", "error");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Deny image failed: {ex.Message}");
            ShowAlert("Error denying image", "error");
        }
    }

    private void ApproveRefund(string refundId)
    {
        try
        {
            var result = RefundService.ApproveRefund(refundId);
            if (result)
            {
                ShowAlert("Refund approved and credits returned!", "success");
                LoadPendingRefunds();
            }
            else
            {
                ShowAlert("Failed to approve refund", "error");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Approve refund failed: {ex.Message}");
            ShowAlert("Error approving refund", "error");
        }
    }

    private void DenyRefund(string refundId)
    {
        try
        {
            var result = RefundService.RejectRefund(refundId);
            if (result)
            {
                ShowAlert("Refund request denied", "success");
                LoadPendingRefunds();
            }
            else
            {
                ShowAlert("Failed to deny refund", "error");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Deny refund failed: {ex.Message}");
            ShowAlert("Error denying refund", "error");
        }
    }

    private void ShowAlert(string message, string type)
    {
        alertMessage = message;
        alertType = type;
        StateHasChanged();
        
        Task.Delay(3000).ContinueWith(_ =>
        {
            InvokeAsync(() =>
            {
                alertMessage = "";
                StateHasChanged();
            });
        });
    }

    public void Dispose()
    {
        refreshTimer?.Dispose();
        
        // Unsubscribe from events
        ModerationService.PendingImagesChanged -= OnPendingImagesChanged;
        CommandQueue.HistoryChanged -= OnHistoryChanged;
    }
}
